    <link href="~/Assets/User/css/main.css" rel="stylesheet">
    <link href="~/Assets/User/css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
